<%- include('partials/header',{title: pageTitle}) %>
<%- include('partials/sidebar') %>

<main class="dashboard-container">
  <!-- TOP GRID: PROFILE & DETAILS -->
  <div class="profile-grid">
    <!-- LEFT: PROFILE CARD -->
    <div class="profile-card">
      <div class="profile-header">
        <div class="avatar">
          <i class="fa-solid fa-user"></i>
        </div>
        <div class="user-info">
          <h2><%= name %></h2>
          <p class="email"><%= email %></p>
        </div>
      </div>
      <div class="profile-actions">
        <a href="profile/edit-profile" class="btn btn-primary">
          <i class="fa-solid fa-pen"></i> Edit Profile
        </a>
        <a href="/logout" class="btn btn-secondary">
          <i class="fa-solid fa-right-from-bracket"></i> Logout
        </a>
      </div>
    </div>

    <!-- RIGHT: DETAILS CARD -->
    <div class="details-card">
      <h3><i class="fa-solid fa-user-circle"></i> Personal Information</h3>
      <div class="form-group">
        <label>Full Name</label>
        <input type="text" value="<%= name %>" readonly>
      </div>
      <div class="form-group">
        <label>Email Address</label>
        <div class="input-with-icon">
          <i class="fa-solid fa-envelope"></i>
          <input type="text" value="<%= email %>" readonly>
        </div>
      </div>
      <div class="form-group">
        <label>Member Since</label>
        <div class="input-with-icon">
          <i class="fa-solid fa-calendar"></i>
          <input type="text" value="December 2025" readonly>
        </div>
      </div>
    </div>
  </div>

  <!-- BOTTOM: STATS SECTION -->
  <div class="stats-section">
    <h3><i class="fa-solid fa-chart-line"></i> Your Activity</h3>
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fa-solid fa-heart"></i>
        </div>
        <div class="stat-number"><%= favCount %></div>
        <div class="stat-label"><a class="stat-label" href="/favourites">Favourites</a></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fa-solid fa-list-check"></i>
        </div>
        <div class="stat-number"><%= todoCount %></div>
        <div class="stat-label"><a class="stat-label" href="/todo">Todos</a></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fa-solid fa-note-sticky"></i>
        </div>
        <div class="stat-number"><%= notesCount %></div>
        <div class="stat-label"><a class="stat-label" href="/notes">Notes</a></div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>