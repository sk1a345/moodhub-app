<%- include('partials/header',{title: "signup"}) %>

<main class="auth-container">
  <div class="auth-card">
    <h2>Create Your Account</h2>
    <p class="auth-subtitle">Join Moodub and build your personal space.</p>
    <form action="/signup" method="POST" class="auth-form">
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" name="name" required placeholder="Enter your full name">
      </div>
      <div class="form-group">
        <label for="username">Nickname / Username</label>
        <input type="text" name="username" required placeholder="eg. Chotu">
      </div>
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" name="email" required placeholder="e.g xyz@gmail.com">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" required placeholder="Must be at least 6 characters long">
      </div>
      
      <button class="btn primary auth-btn" type="submit">Create Account</button>

    </form>
    <p class="auth-switch">
      Already have an account? <a href="/login">Login here</a>
    </p>
  </div>
</main>

<%- include('partials/footer') %>